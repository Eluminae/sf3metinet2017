{% extends '::base.html.twig' %}

{% block body %}
    <div class="col-md-3">
    <form method="post">
        <div class="form-group">
            <label for="email">Votre e-mail</label>
            <input type="text" class="form-control" name="email" id="email" value="{{ email }}">
        </div>
        <div class="form-group">
            <label for="from">À partir du</label>
            <input type="date" class="form-control" name="from" id="from" value="{{ from }}">
            <label for="to">Jusqu'au</label>
            <input type="date" class="form-control" name="to" id="to" value="{{ to }}">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Valider ma réservation</button>
        </div>
    </form>
    </div>
{% endblock %}
