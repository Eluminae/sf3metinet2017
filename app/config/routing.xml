<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="homepage" path="/">
        <default key="_controller">AppBundle:Accommodations:list</default>
    </route>

    <route id="booking_confirmation" path="/book/confirmed">
        <default key="_controller">AppBundle:Booking:bookingConfirmation</default>
    </route>

    <route id="book_accommodation" path="/book/{accommodationId}">
        <default key="_controller">AppBundle:Booking:book</default>
    </route>

</routes>



